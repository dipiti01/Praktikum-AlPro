#Soal 1 (4.1)
try :
    suhuBadan = int(input("Masukkan suhu badan anda: "))

    if suhuBadan < 38:
        print("anda tidak demam")
    else:
        print("anda demam")
except:
    print("Inputan tidak valid. Suhu harus berupa angka")

#Soal 1 (4.2)
try:    
    angka = int(input("Masukkan angka: "))
    if angka == 0:
        print("Nol")
    elif angka > 0:
        print("Positif")
    else:
        print("Negatif")
except:
    print("Input tidak valid. Masukkan inputan dalam bentuk angka.")

#Soal 1 (4.3)
try:
    angka1 = int(input("Masukkan nilai angka 1: "))
    angka2 = int(input("Masukkan nilai angka 2: "))
    angka3 = int(input("Masukkan nilai angka 3: "))

    if angka1 > angka2 and angka1 > angka3:
        print("Terbesar: ", angka1)
    elif angka2 > angka1 and angka2 > angka3:
        print("Terbesar: ", angka2)
    else:
        print("Terbesar: ", angka3)
except:
    print("Inputan tidak valid. Masukkan inputan berupa angka")

#Soal 2
angka = int(input("Masukkan angka: "))
hasil = "Nol" if angka == 0 else "Positif" if angka > 0 else "Negatif"
print(hasil)

#Soal 3
