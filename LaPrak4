        print("30 hari")
    elif "5":
        print("31 hari")
    elif "6":
        print("30 hari")
    elif "7":
        print("31 hari")
    elif "8":
        print("31 hari")
    elif "9":
        print("30 hari")
    elif "10":
        print("31 hari")
    elif "11":
        print("30 hari")
    else:
        print("31 hari")
