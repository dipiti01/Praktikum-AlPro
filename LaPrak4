#Soal 4
try:
    sisi1 = int(input("Masukkan sisi segitiga 1: "))
    sisi2 = int(input("Masukkan sisi segitiga 2: "))
    sisi3 = int(input("Masukkan sisi segitiga 3: "))

    if sisi1 == sisi2 and sisi2 == sisi3 and sisi3 == sisi1:
        print("3 sisi segitiga sama")
    elif sisi1 == sisi2 or sisi2 == sisi3 or sisi3 == sisi1:
        print("2 sisi segitiga sama")
    else:
        print("Tidak ada sisi segitiga yang sama")
except:
    print("Input tidak valid. Silahkan masukkan inputan dalam bentuk angka")
